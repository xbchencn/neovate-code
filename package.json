{
  "name": "@neovate/code",
  "version": "0.18.0",
  "type": "module",
  "files": [
    "dist",
    "vendor"
  ],
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "source": "./src/index.ts",
  "bin": {
    "neovate": "./dist/cli.mjs",
    "neo": "./dist/cli.mjs"
  },
  "scripts": {
    "dev": "bun ./src/cli.ts",
    "format": "biome format .",
    "build:type": "tsc --project tsconfig.json --emitDeclarationOnly --declarationDir dist-dts",
    "build:cli": "bun build src/cli.ts --external react-devtools-core --minify --outfile dist/cli.mjs --target=node",
    "build:index": "bun build src/index.ts --external react-devtools-core --minify --outfile dist/index.mjs --target=node",
    "build:dts": "npm run build:type && api-extractor run --local --verbose",
    "build:browser": "pnpm --filter @neovate/browser build",
    "build:post": "bun scripts/post-build.ts",
    "build:mcps": "bun scripts/bundleMcps.ts",
    "build": "rm -rf dist dist-dts && npm run build:cli && npm run build:index && npm run build:dts && npm run build:mcps && npm run build:post",
    "ci": "npm run typecheck && npm run format && npm run test",
    "detect-unused": "bun scripts/detect-unused.ts",
    "extension:build": "pnpm --filter neovate-assistant build",
    "extension:dev": "pnpm --filter neovate-assistant dev",
    "extension:publish": "cd vscode-extension && npm run publish && cd ..",
    "extension:package": "pnpm --filter neovate-assistant package",
    "extension:bump": "pnpm --filter neovate-assistant bump",
    "release": "npm run ci && utools release --git-tag --github-release --changelog",
    "release:minor": "npm run ci && utools release --git-tag --github-release --changelog --bump minor",
    "release:major": "npm run ci && utools release --git-tag --github-release --changelog --bump major",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "bun scripts/e2e.ts",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "ready": "bun scripts/ready.ts"
  },
  "keywords": [
    "cli",
    "neovate",
    "neo",
    "ai",
    "coding-agent",
    "agent"
  ],
  "authors": [
    "chencheng <sorrycc@gmail.com> (https://github.com/sorrycc)"
  ],
  "homepage": "https://neovateai.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/neovateai/neovate-code/"
  },
  "bugs": {
    "url": "https://github.com/neovateai/neovate-code/issues"
  },
  "license": "MIT",
  "description": "A coding agent to enhance your development workflow.",
  "devDependencies": {
    "@ai-sdk/anthropic": "^2.0.45",
    "@ai-sdk/deepseek": "^1.0.28",
    "@ai-sdk/google": "^2.0.39",
    "@ai-sdk/mcp": "^0.0.8",
    "@ai-sdk/openai": "^2.0.69",
    "@ai-sdk/openai-compatible": "^1.0.27",
    "@ai-sdk/provider": "^2.0.0",
    "@ai-sdk/xai": "^2.0.33",
    "@aihubmix/ai-sdk-provider": "^0.0.6",
    "@biomejs/biome": "^2.3.6",
    "@fastify/compress": "8.3.0",
    "@fastify/cors": "11.1.0",
    "@fastify/static": "^8.3.0",
    "@fastify/type-provider-typebox": "6.1.0",
    "@microsoft/api-extractor": "^7.55.0",
    "@modelcontextprotocol/inspector": "^0.17.2",
    "@openrouter/ai-sdk-provider": "^1.2.3",
    "@sinclair/typebox": "^0.34.38",
    "@stagewise/agent-interface": "^0.3.2",
    "@types/bun": "^1.3.2",
    "@types/debug": "^4.1.12",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash-es": "^4.17.12",
    "@types/marked-terminal": "^6.1.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.6",
    "@types/resolve": "^1.20.6",
    "@types/turndown": "^5.0.6",
    "@types/ws": "^8.18.1",
    "@types/yargs-parser": "^21.0.3",
    "@umijs/clack-prompts": "^0.0.7",
    "@umijs/tools": "^0.1.36",
    "ai": "^5.0.97",
    "chalk": "^5.5.0",
    "chardet": "^2.1.1",
    "chokidar": "^4.0.3",
    "chrome-devtools-mcp": "^0.8.1",
    "clipboardy": "^5.0.1",
