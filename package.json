    "type-fest": "^5.2.0",
    "typescript": "^5.9.3",
    "valtio": "^2.2.0",
    "vitest": "^4.0.10",
    "wrap-ansi": "^9.0.0",
    "ws": "^8.18.3",
    "yargs-parser": "22.0.0",
    "zod": "^4.1.12",
    "zod-to-json-schema": "^3.25.0",
    "zustand": "^5.0.8"
  },
  "volta": {
    "node": "22.11.0",
    "pnpm": "10.13.1"
  },
  "packageManager": "pnpm@10.13.1",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css}": "biome format --write"
  },
  "publishConfig": {
    "access": "public"
  }
}
