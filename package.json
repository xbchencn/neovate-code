    "marked": "^17.0.0",
    "marked-terminal": "^7.3.0",
    "minimatch": "^10.1.1",
    "open": "^11.0.0",
    "pathe": "^2.0.3",
    "picocolors": "^1.1.1",
    "portfinder": "^1.0.38",
